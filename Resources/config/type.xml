<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="genemu.form.type.tinymce.class">Genemu\Bundle\FormBundle\Form\Type\TinymceType</parameter>
        <parameter key="genemu.form.type.recaptcha.class">Genemu\Bundle\FormBundle\Form\Type\ReCaptchaType</parameter>
        <parameter key="genemu.form.type.jquerydate.class">Genemu\Bundle\FormBundle\Form\Type\JQueryDateType</parameter>
        <parameter key="genemu.form.type.jqueryautocompleter.class">Genemu\Bundle\FormBundle\Form\Type\JQueryAutocompleterType</parameter>
        <parameter key="genemu.form.type.jqueryslider.class">Genemu\Bundle\FormBundle\Form\Type\JQuerySliderType</parameter>
    </parameters>

    <services>
        <service id="genemu.form.type.tinymce" class="%genemu.form.type.tinymce.class%">
            <tag name="form.type" alias="genemu_tinymce" />
            <argument>%genemu.form.tinymce.theme%</argument>
            <argument>%genemu.form.tinymce.script_url%</argument>
            <argument>%genemu.form.tinymce.configs%</argument>
        </service>
        <service id="genemu.form.type.recaptcha" class="%genemu.form.type.recaptcha.class%">
            <tag name="form.type" alias="genemu_recaptcha" />
            <argument type="service" id="genemu.form.type_recaptcha.validator" />
            <argument>%genemu.form.recaptcha.public_key%</argument>
            <argument>%genemu.form.recaptcha.options%</argument>
        </service>
        <service id="genemu.form.type.jquerydate" class="%genemu.form.type.jquerydate.class%">
            <tag name="form.type" alias="genemu_jquerydate" />
            <argument>%genemu.form.jquerydate.configs%</argument>
        </service>
        <service id="genemu.form.type.jqueryautocompleter" class="%genemu.form.type.jqueryautocompleter.class%">
            <tag name="form.type" alias="genemu_jqueryautocompleter" />
        </service>
        <service id="genemu.form.type.jqueryslider" class="%genemu.form.type.jqueryslider.class%">
            <tag name="form.type" alias="genemu_jqueryslider" />
        </service>
    </services>

</container>
