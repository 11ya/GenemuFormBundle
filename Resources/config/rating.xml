<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="genemu.form.rating.options" type="collection" />
    </parameters>

    <services>
        <service id="genemu.form.type.rating" class="%genemu.form.namespace.type%\RatingType">
            <tag name="form.type" alias="genemu_rating" />
            <argument>%genemu.form.rating.options%</argument>
        </service>
        <service id="genemu.form.type.jqueryrating" class="%genemu.form.namespace.jquery%\RatingType">
            <tag name="form.type" alias="genemu_jqueryrating" />
        </service>
    </services>

</container>
