<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="genemu.form.color.options" type="collection" />
    </parameters>

    <services>
        <service id="genemu.form.type.color" class="%genemu.form.namespace.type%\ColorType">
            <tag name="form.type" alias="genemu_color" />
            <argument>%genemu.form.color.options%</argument>
        </service>
        <service id="genemu.form.type.jquerycolor" class="%genemu.form.namespace.jquery%\ColorType">
            <tag name="form.type" alias="genemu_jquerycolor" />
        </service>
    </services>

</container>
