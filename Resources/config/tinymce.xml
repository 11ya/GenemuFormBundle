<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="genemu.form.type.tinymce.class">Genemu\Bundle\FormBundle\Form\Type\TinymceType</parameter>

        <parameter key="genemu.form.tinymce.theme" />
        <parameter key="genemu.form.tinymce.script_url" />
        <parameter key="genemu.form.tinymce.options" />
    </parameters>

    <services>
        <service id="genemu.form.type.tinymce" class="%genemu.form.type.tinymce.class%">
            <tag name="form.type" alias="genemu_tinymce" />
            <argument>%genemu.form.tinymce.theme%</argument>
            <argument>%genemu.form.tinymce.script_url%</argument>
            <argument>%genemu.form.tinymce.options%</argument>
        </service>
    </services>

</container>
