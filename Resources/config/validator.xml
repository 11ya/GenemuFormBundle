<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="genemu_recaptcha.validator.class">Genemu\Bundle\FormBundle\Validator\Constraints\ReCaptchaValidator</parameter>
    </parameters>

    <services>
        <service id="genemu_recaptcha.validator" class="%genemu_recaptcha.validator.class%">
            <tag name="validator.constraint_validator" alias="genemu_validator.recaptcha" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>